
@{
    ViewBag.Title = "ImageSource";
    
    string imgIntern = "<img src=\"/Content/Penguins.jpg\" alt=\"[Internt bilde]\" />";
    string imgDataAbbr = "<img src=\"data:image/png;base64,iVBORw0KGgoAAAANSUhE ... gqO2uOq+env8BzqX54ny4exgAAAAASUVORK5CYII=\" alt=\"[data:image/png;]\" />";
    string imgData = "<img src=\"data:image/png;base64,\" alt=\"[data:image/png;]\" />";
    string imgEkstern = "<img src=\"https://media.giphy.com/media/o0vwzuFwCGAFO/giphy.gif\" alt=\"[Eksternt bilde]\" />";
}

<h2>Image source</h2>


<ul>
<li>@Html.ActionLink("img-src 'none'", "ImageSource", new { src = "none" })</li>
<li>@Html.ActionLink("img-src 'self'", "ImageSource", new { src = "self" })</li>
<li>@Html.ActionLink("img-src media.giphy.com", "ImageSource", new { src = "url" })</li>
<li>@Html.ActionLink("img-src 'self' media.giphy.com", "ImageSource", new { src = "selfurl" })</li>
<li>@Html.ActionLink("img-src 'self' data:", "ImageSource", new { src = "selfdata" })</li>
<li>@Html.ActionLink("img-src *", "ImageSource", new { src = "all" })</li>
<li>@Html.ActionLink("img-src * data:", "ImageSource", new { src = "alldata" })</li>
</ul>



<h3>Http Header (Response)</h3>
<code>
    Response.AddHeader("Content-Security-Policy", @String.Format("\"image-src {0}\"", ViewBag.Source ?? ""));
</code>


<h3>Html</h3>

<code>
@imgIntern<br />
@imgDataAbbr<br />
@imgEkstern<br /></code>

<section class="result">
    @Html.Raw(imgIntern)
    @Html.Raw(imgData)
    @Html.Raw(imgEkstern)
</section>


